<div class="container">
  <h1 class="my-4">Cadastro de Pontuação</h1>
  <form action="/add-score" method="post">
    <div class="form-group">
      <label for="team">Selecione o time:</label>
      <select id="team" name="team" class="form-control">
        <% teams.forEach(team => { %>
          <option value="<%= team %>"><%= team %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="score">Pontuação:</label>
      <input type="number" id="score" name="score" min="1" max="3" required class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
</div>