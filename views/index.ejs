<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ranking das Equipes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link href="/css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6" id="ranking-container">
        <% scores.forEach((item, index) => { %>
          <% if (index < 5) { %>
            <div class="ranking-item">
              <div class="rank rank-<%= index + 1 %>"><%= index + 1 %></div>
              <div class="school-name">
                <%= item.team %>
                <span class="score"><%= item.score %></span>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
      <div class="col-md-6" id="additional-rankings">
        <% if (scores.length > 5) { %>
          <div class="additional-rankings">
            <% scores.slice(5).forEach((item, index) => { %>
              <p><%= index + 6 %>..............<%= item.team %>..............<%= item.score %></p>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
    <div class="add-score-btn mt-3">
      <a href="/add-score">
        <button class="btn btn-primary mt-3">Adicionar Pontuação</button>
      </a>
    </div>
  </div>
  <script>
    setTimeout(function(){
      location.reload();
    }, 10000);
  </script>
</body>
</html>